extends layout

block content
    include nav
    .reg-box
        .header
            h2 Registre
        form(action="/register", method="post")
            .form-group
                label username
                input(type="text" name="username" class="group-input")
            .form-group
                label Email
                input(type="email" name="email" class="group-input")
            .form-group
                label Password
                input(type="password" name="password" class="group-input")

            button(type="submit" class="btn btn-primary") Submit
