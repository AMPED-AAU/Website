                label Groupname &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                input(type="text" name="group_name" class="group-input")
            .form-group
                label Email &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                input(type="email" name="group_email" class="group-input")
            .form-group
                label Password &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                input(type="password" name="password" class="group-input")
            .form-group
                label About Group &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                input(type="text" name="GruppeBeskrivelse" class="group-input")
            .form-group
                label Facebook URL &nbsp&nbsp&nbsp
                input(type="text" name="FacebookURL" class="group-input")

            button(type="submit" class="btn btn-primary") Submit