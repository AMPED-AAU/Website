extends layout
block content
    .topbar
    ul
    a(href='/admin' style='color: white') AdminPage &nbsp&nbsp&nbsp&nbsp&nbsp

    a(href='admin/groups' style='color: white') GroupsAdmin &nbsp&nbsp&nbsp&nbsp&nbsp

    a(href='/events' style='color: white') Events &nbsp&nbsp&nbsp&nbsp&nbsp

    a(href='/groups' style='color: white') Groups &nbsp&nbsp&nbsp&nbsp&nbsp

    a(href='/logout' style='color: white') Logout &nbsp&nbsp&nbsp&nbsp&nbsp

    .container
        table.col-xs-12
            tr
                th Id
                th Group name
                th Event name
                th Beskrivelse
                th Lokation
                th Tid
                th Dato
                th Pris
                th Facebook URL
            each event in eventlist ? eventlist : []
                tr
                    td #{event.id}
                    td #{event.group_id}
                    td #{event.event_name}
                    td #{event.beskrivelse}
                    td #{event.lokation}
                    td #{event.tid}
                    td #{event.dato}
                    td #{event.pris}
                    td #{event.fburl}




