extends layout

block content
    include nav
    h1= current = ''
    body
        button.dropbtn Sort
            .dropdown-content

                a(href='/events/sortddateasc') Date  &uarr;

                a(href='/events/sortddatedesc') Date &darr;

        ol

            .event-container
                each event in eventlist
                    p()
                    a(href=`/events/${event.id}` style='color: white' method = 'POST' id=`${event.id}` )  #{event.event_name}
                        p()

                        .event
                            .event-left
                                .event-date

                            .event-right

                                .klub Klub: #{event.group_id}
                                .date d. #{event.dato}
                                .sted Sted: #{event.lokation}
                                .event-description Om: #{event.beskrivelse}
                                .event-timing Kl. #{event.tid}

    include pagination